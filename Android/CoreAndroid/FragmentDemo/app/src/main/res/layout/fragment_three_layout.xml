<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Fragment3"
        android:id="@+id/textTitle"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTitle"
        android:layout_centerHorizontal="true"
        android:text="Go To Fragment1"
        android:layout_marginTop="10dp"
        android:id="@+id/goToFrag1Btn3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go To Fragment2"
        android:layout_below="@+id/goToFrag1Btn3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/goToFrag2Btn3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goToFrag2Btn3"
        android:layout_centerHorizontal="true"
        android:text="Go To Fragment3"
        android:layout_marginTop="10dp"
        android:id="@+id/goToFrag3Btn3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goToFrag3Btn3"
        android:layout_centerHorizontal="true"
        android:text="Go To Second Activity"
        android:layout_marginTop="10dp"
        android:id="@+id/goToSecndActivityBtn3" />

</RelativeLayout>